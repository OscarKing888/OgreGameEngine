// 用于需要半透效果的衣服
material CharacterTemplateAlphaBlend
{    
    technique
    {
		pass
		{					
			alpha_rejection greater 128			
			colour_write off			
			scene_blend zero one			
			
			texture_unit
			{
				texture <baseTex>.jpg
				texture_alias <baseTexture>
			}
		}
    	pass
		{	
            emissive 0.4 0.4 0.4            
            scene_blend alpha_blend
			texture_unit
			{
				texture <baseTex>.jpg
				texture_alias <baseTexture>
				tex_address_mode clamp
			}
		}
    }    
}