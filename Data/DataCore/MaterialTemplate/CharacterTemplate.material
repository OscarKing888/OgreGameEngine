// 用于布甲
material CharacterTemplateAlpha
{      
    technique
    {
    	pass
		{
            emissive 0.4 0.4 0.4
		    alpha_rejection greater 128

			texture_unit
			{
				texture <baseTex>.jpg
				texture_alias <baseTexture>
                tex_address_mode clamp
			}
		}
    }
}

material CharacterTemplateNoAlpha
{    
    technique
    {
    	pass
		{	
            emissive 0.4 0.4 0.4
		
			texture_unit
			{
				texture <baseTex>.jpg
				texture_alias <baseTexture>
				tex_address_mode clamp
			}
		}
    }
    
}

